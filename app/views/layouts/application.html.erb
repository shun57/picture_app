<!DOCTYPE html>
<html>
  <head>
    <title>Snappee</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <!-- ナビバー -->
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">Snappee</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">
                <%= image_tag('logo1.png',:size => "125x30",:alt => "ロゴ") %>
              </a>
            </div>
              <div id="gnavi" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                  <% if user_signed_in? %>
                  <li>
                    <%= link_to '＋New Snap!!', new_picture_path %>
                  </li>
                  <li>
                    <a href="/users/<%= current_user.id %>">Mypage</a>
                  </li>
                  <li>
                    <a class="nav-link" href="/users/<%= current_user.id %>/favorite">favorite</a>
                  </li>
                  <li>
                    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                  </li>
                  <% end %>
                </ul>
              </div>
          </div>
        </nav>
      </heder>

  <div class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>

  <footer>
    <p class="mt-5 mb-3 text-muted text-center">&copy; 2018 Snappee.inc</p>
  </footer>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>
